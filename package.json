{
  "type": "module",
  "main": "bin/index.js",
  "name": "taggedjs-cli",
  "version": "0.0.17",
  "description": "quick setup and maintenance of a taggedjs project",
  "scripts": {
    "start": "ts-node ./src/tj.mts -i",
    "build": "run-s build:js && echo \"âœ… Build completed\"",
    "build:js": "run-s build:bin build:js-stamp copy:js-stamp-files build:es-stamp copy:es-stamp-files",
    "build:bin": "rm -rf ./bin && tsc --project ./tsconfig.bin.json",
    "build:js-stamp": "rm -rf ./js-stamp && tsc --project ./tsconfig.js-stamp.json",
    "build:es-stamp": "rm -rf ./es-stamp && tsc --project ./tsconfig.es-stamp.json",
    "copy:js-stamp-files": "cp ts-stamp/*.html js-stamp/ && cp -R ts-stamp/assets js-stamp",
    "copy:es-stamp-files": "cp ts-stamp/*.html es-stamp/ && cp -R ts-stamp/assets es-stamp",
    "save": "npm run patch:version && git add . && git commit -m \"patch\" && git push",
    "patch:version": "npm --no-git-tag-version version patch",
    "tj": "node ./bin/tj.mjs -i",
    "deploy": "npm run build && npm run save && npm publish"
  },
  "bin": {
    "tj": "./bin/tj.mjs"
  },
  "keywords": [
    "react",
    "angular",
    "vue",
    "svelte",
    "alternative",
    "native",
    "web",
    "browser"
  ],
  "author": "Acker Dawn Apple",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "chokidar-cli": "^3.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.19",
    "taggedjs": "^2.6.4"
  }
}
